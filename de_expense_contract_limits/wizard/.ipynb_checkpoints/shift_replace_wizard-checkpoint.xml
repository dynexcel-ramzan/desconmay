<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_shift_replacement_wizard_form" model="ir.ui.view">
            <field name="name">shift.replace.wizard.form</field>
            <field name="model">shift.replace.wizard</field>
            <field name="arch" type="xml">
                <form string="Shift Replacement Wizard">
                    <group>
                      <group>
                           <field name="replacement_type" />  
                          <field name="date_from" />  
                          <field name="shift_replace_id" options="{'no_create': True, 'no_create_edit':True}"/>  
                      </group>
                      <group>
                          <field name="company_id"  options="{'no_create': True, 'no_create_edit':True}" />
                          <field name="date_to" />
                          <field name="shift_replace_with_id" />  
                          
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Confirm' name="action_confirm" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_shift_replacement_wizard_action" model="ir.actions.act_window">
            <field name="name">Shift Replacement</field>
            <field name="res_model">shift.replace.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_shift_replacement_wizard_form"/>
        </record> 
    
    
       <menuitem
        id="shift_replace_wizard_menuitem"
        name="Shift Replacement"
        parent="de_employee_shift.menu_shift_schedule_generate_id_menu"
        sequence="79"
        action="open_shift_replacement_wizard_action"
    />


</odoo>